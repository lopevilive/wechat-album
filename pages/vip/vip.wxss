/**index.wxss**/
.header-wrap {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}
.header-wrap .img-shop {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.header-wrap .right-content .desc {
  font-size: 24rpx;
  color: #bebcbb;
  margin-top: 5rpx;
}
.tit-wrap {
  font-weight: bold;
  font-size: 28rpx;
  margin:  30rpx;
}
.tips-wrap {
  margin-top: 10rpx;
  padding: 0 30rpx;
  font-size: 20rpx;
  color: #bebcbb;
}
.tips-wrap .tips-contact {
  display: inline;
  color: #4296d5;
}

.combo-wrap {
  width: 100%;
  box-sizing: border-box;
  overflow: auto;
  padding: 0 30rpx;
  display: flex;
  flex-wrap: nowrap;
}
.combo-wrap .item-wrap {
  display: flex;
  flex-direction: column;
  border: 1px solid #bebcbb;
  background: #fff;
  width: 230rpx;
  justify-content: center;
  align-items: center;
  padding: 50rpx 0;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}
.combo-wrap .item-wrap.active-item {
  border: 2px solid #9ff7e4;
  background: #dbfcf0;
}
.combo-wrap .item-wrap.disabled-item {
  background: #f5f5f5;
  color: #bebcbb;
}
.combo-wrap .item-wrap .item-name {
  font-size: 28rpx;
}
.combo-wrap .item-wrap .price-content {
  margin-top: 10rpx;
  display: flex;
  align-items: baseline;
}
.combo-wrap .item-wrap .price-content .unit {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.combo-wrap .item-wrap .price-content .num {
  font-size: 50rpx;
  font-weight: bold;
}
.rights-wrap {
  display: flex;
  flex-wrap: wrap;
}
.rights-wrap .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.3%;
  /* width: 50%; */
  margin-bottom: 40rpx;
}
.rights-wrap .item .icon {
  width: 70rpx;
  height: 70rpx;
  overflow: hidden;
  margin-bottom: 5rpx;
}
.rights-wrap .item .icon .icon-img {
  width: 100%;
  height: 100%;
}
.rights-wrap .item .item-name {
  font-weight: bold;
  font-size: 28rpx;
}
.rights-wrap .item .item-desc {
  font-size: 22rpx;
  color: #6e7071;
  text-align: center;
  width: 80%;
  height: 32rpx;
}

.btn-wrap {
  margin-top: 50rpx;
}

.btn-wrap .btn {
  width: 80%;
}

.count-style {
  display: inline;
  color: #2f79ce;
  font-weight: bold;
}